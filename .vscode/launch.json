    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Gulp",
            "env": {"NODE_ENV": "development"},
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "--nolazy"
            ]
        }
    ]
}
